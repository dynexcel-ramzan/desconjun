<odoo>
  <data>


       <record id="hr_payslip_run_oracle_data_server_action" model="ir.actions.server">
                  <field name="name">Post To Oracle</field>
                  <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
                  <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>            
                  <field name="binding_view_types">form</field>
                  <field name="state">code</field>
                  <field name="code">action = records.action_post_payroll_data() </field>
    </record>
      
       <record id="hr_payslip_views_controlled_account" model="ir.ui.view">
			<field name="name">hr.payslip.controlled.account</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
			<field name="arch" type="xml">
                        <xpath expr="//header" position="inside">
                             <button string="Create Entry" name="action_generate_entry" type="object" states="verify" class="oe_highlight" />
		        </xpath>
                        
            </field>
       </record>
       
       <record id="hr_payslip_run_views_oracle_posted" model="ir.ui.view">
			<field name="name">hr.payslip.run.oracle</field>
			<field name="model">hr.payslip.run</field>
			<field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
			<field name="arch" type="xml">
                        <xpath expr="//field[@name='date_end']" position="after">
                             <field name='oracle_posted' invisible='1'/>
		        </xpath>
            </field>
       </record>

  </data>
</odoo>